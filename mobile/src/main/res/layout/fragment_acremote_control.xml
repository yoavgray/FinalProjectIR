<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.bgu.project.finalprojectir.DeviceActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textViewLeaveRemainingDescription"
        android:text="AC Remote Control"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/powerImageButton"
        android:src="@drawable/rc_power_ic"
        android:layout_height="70dp"
        android:layout_width="80dp"
        android:scaleType="fitCenter"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Set Tempretaure In Celcius:"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/tempSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/setTempButton"
        android:text="Set Temperature"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>